<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <% newListItems.forEach(item => { %>
            <div class="item">
                <input type="checkbox">
                <p><%= item  %></p>
            </div>
        <% }) %>

        <form class="" action="/" method="post">
            <input type="text" name="newItem" title="Tarefa para adicionar." placeholder="Novo item" autocomplete="off">    
            <button type="submit" name="list" value=<%= listTitle %> title="Adicionar">+</button>
        </form>
    </div>

<%- include("footer") -%>